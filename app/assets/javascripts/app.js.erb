(function() {

    var app = angular.module('boneyard', [

        'ngResource',
        'ngRoute',
        'ngAnimate',
        'infinite-scroll'

    ]);

    app.config(function($routeProvider, $locationProvider) {

        $routeProvider
            .when('/', {
                templateUrl: '<%= asset_path('dashboard/templates/dashboard.html') %>',
                controller: 'dashboardCtrl'
            })
            .otherwise({
                redirectTo: '/'
            });

        $locationProvider.html5Mode(true);
    });

})();
